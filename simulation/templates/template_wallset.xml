<?xml version="1.0" encoding="utf-8"?>
<!-- Abstract entity to serve as a bare-minimum dummy constructable entity to initiate wall 
     placement. Defines the set of actual entities that are part of the same wall construction 
     system (e.g. gates, towers, wall segments of various length, etc.) using the WallSet 
     component (to be overridden by child templates). -->
<Entity>
  <Identity>
    <Civ>gaia</Civ>
    <Classes datatype="tokens">StoneWall</Classes>
    <GenericName>City Wall</GenericName>
    <Icon>structures/wall.png</Icon>
    <RequiredTechnology>phase_city</RequiredTechnology>
    <Tooltip>Wall off an area for a stout defence.</Tooltip>
    <Undeletable>true</Undeletable>
  </Identity>
  <Visibility>
    <AlwaysVisible>false</AlwaysVisible>
    <Corpse>false</Corpse>
    <Preview>false</Preview>
    <RetainInFog>false</RetainInFog>
  </Visibility>
</Entity>
